{
  "presets": [
    ["es2015", { "modules": false }],
    "react",
    "stage-0",
  ],
  "plugins": [
    "transform-runtime",
    "transform-decorators-legacy",
    [
      "module-resolver",
      {
        "root": ["./app/common"],
        "alias": {
          "tests": "./tests",
          "withStyles": "isomorphic-style-loader/lib/withStyles",
          "public": "./public"
        }
      }
    ],
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    }
  }
}
